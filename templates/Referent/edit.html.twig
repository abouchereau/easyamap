{% extends 'layout.html.twig' %}
{% block header_title %}Edition référent{% endblock %}

{% block body %}
<div class="row">
   <div class="col-md-4">   
    <a href="{{ path('referent') }}" class="btn btn-primary"><span class="glyphicon glyphicon-list"></span> Liste</a>
   </div>
   <div class="col-md-4">
     {% form_theme form 'Form/fields.html.twig' %}
     {{ form(form) }}    
    </div>
    <div class="col-md-4 text-right">
       <a onclick="if(confirm('Voulez-vous vraiment supprimer le référent ?')){window.location.href=this.href;};return false;" href="{{ path('referent_delete', { 'id': entity.idReferent }) }}" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
    </div>
</div>
{% endblock %}
{% block footer_js %}
<script type="text/javascript" src="{{ asset('js/form.js') }}"></script>
{% endblock %}

