{% extends 'layout.html.twig' %}

{% block header_title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-8 col-md-offset-2">

            <h1 style="margin:0;"><span class="easyamap easyamap-medium">easy<span>amap</span></span></h1>
            <h2>Réinitialisation de mot de passe</h2>

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <div class="col-md-6">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, {'attr' : { 'class': 'form-control' }}) }}
                <div>
                    <small>
                        Entrez votre adresse de courriel et un lien de réinitialisation de mot de passe vous sera envoyé.
                    </small>
                </div>
                <div class="text-center" style="margin-top:40px;">
                    <button class="btn btn-primary">Demander un nouveau mot de passe</button>
                </div>
                {{ form_end(requestForm) }}

                <div class="text-center" style="margin-top:10px;">
                    <a href="{{ path('app_login') }}"><button class="btn btn-default">Retour à la page d'authentification</button></a>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>
    </div>



{% endblock %}