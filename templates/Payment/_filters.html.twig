<div class="row paiement">
    <div class="col-md-12 bg-success">    
        <div class="box box-primary">
            <div class="box-body">
                <form class="sonata-filter-form" action="#" method="GET" role="form">                    
                    <div class="filter_container active">
                        <div class="form-group">
                            <label for="filter-contract">Contrat</label>                                    
                           <br />
                            <select id="filter-contract" class="form-control">
                                <option value="0">Tous</option>
                                {% for contract in contracts %}{#
                                    #}<option value="{{ contract.idContract }}"{% if contract.idContract == filters.contract %} selected="selected"{% endif %}>{{ contract.label }}</option>{#
                                #}{% endfor %}
                            </select>
                        </div>
                            
                       {% if adherents is not empty %}
                       <div class="form-group">
                            <label for="filter-adherent">Adhérent</label>                                    
                           <br />
                            <select id="filter-adherent" class="form-control">
                                <option value="0">Tous</option>
                                {% for adherent in adherents %}{#
                                    #}<option value="{{ adherent.idUser }}"{% if adherent.idUser == filters.adherent %} selected="selected"{% endif %}>{{ adherent.lastname }} {{ adherent.firstname }}</option>{#
                                #}{% endfor %}
                            </select>
                        </div>
                         {% endif %}
                    
                        <div class="form-group">
                            <label for="filter-farm">Producteur</label>                                    
                           <br />
                            <select id="filter-farm" class="form-control">
                                <option value="0">Tous</option>
                                {% for farm in farms %}{#
                                    #}<option value="{{ farm.idFarm }}"{% if farm.idFarm == filters.farm %} selected="selected"{% endif %}>{{ farm.label }}</option>{#
                                #}{% endfor %}
                            </select>
                        </div>
                    
                        <div class="form-group">
                            <label for="filter-received">Reçu</label>                                    
                           <br />
                            <select id="filter-received" class="form-control">
                                <option value="0">Tous</option>
                                <option value="1"{% if filters.received=='1' %} selected="selected"{% endif %}>Oui</option>
                                <option value="2"{% if filters.received=='2' %} selected="selected"{% endif %}>Non</option>
                            </select>
                        </div>
                    
                    </div>
                </form>
            </div>
        </div>
    </div>                
</div>
